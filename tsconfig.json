{
  "compilerOptions": {
    "types": ["node"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "**/*.d.ts"],
  "include": [
    "index.ts",
    "events/**/*.ts",
    "commands/**/*.ts",
    "handlers/**/*.ts"
  ]
}
